{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "install": {
      "dependsOn": [
        "^install"
      ]
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "./dist/**"
      ]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "pkl:eval": {
      "dependsOn": [
        "^install"
      ],
      "cache": false
    },
    "pkl:gen": {
      "dependsOn": [
        "^install"
      ],
      "cache": false
    }
  }
}