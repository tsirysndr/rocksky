{
  "lexicon": 1,
  "id": "app.rocksky.playlist.insertFiles",
  "defs": {
    "main": {
      "type": "procedure",
      "description": "Insert files into a playlist",
      "parameters": {
        "type": "params",
        "required": [
          "uri",
          "files"
        ],
        "properties": {
          "uri": {
            "type": "string",
            "description": "The URI of the playlist to start",
            "format": "at-uri"
          },
          "files": {
            "type": "array",
            "items": {
              "type": "string",
              "description": "List of file (id) to insert into the playlist"
            }
          },
          "position": {
            "type": "integer",
            "description": "The position in the playlist to insert the files at, if not specified, files will be appended"
          }
        }
      }
    }
  }
}
