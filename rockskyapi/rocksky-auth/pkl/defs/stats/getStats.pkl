amends  "../../schema/lexicon.pkl"

lexicon = 1
id = "app.rocksky.stats.getStats"
defs = new Mapping<String, Query> {
  ["main"] {
    type = "query"
    parameters {
      type = "params"
      properties {
        ["songUri"] = new StringType {
          type = "string"
          description = "The URI of the song to get stats for."
          format = "at-uri"
        }
        ["artistUri"] = new StringType {
          type = "string"
          description = "The URI of the artist to get stats for."
          format = "at-uri"
        }
        ["albumUri"] = new StringType {
          type = "string"
          description = "The URI of the album to get stats for."
          format = "at-uri"
        }
        ["did"] = new StringType {
          type = "string"
          description = "The DID or handle of the user to get stats for."
          format = "at-identifier"
        }
      }
    }
    output = new Output {
      encoding = "application/json"
      schema = new Ref {
        type = "ref"
        ref = "app.rocksky.stats.defs#statsView"
      }
    }
  }
}