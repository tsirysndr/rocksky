{
  "lexicon": 1,
  "id": "app.rocksky.shout",
  "defs": {
    "main": {
      "type": "record",
      "key": "tid",
      "description": "A declaration of a shout.",
      "record": {
        "type": "object",
        "required": [
          "message",
          "createdAt",
          "parent"
        ],
        "properties": {
          "message": {
            "type": "string",
            "description": "The message of the shout.",
            "minLength": 1,
            "maxLength": 1000
          },
          "createdAt": {
            "type": "string",
            "description": "The date the shout was created.",
            "format": "datetime"
          },
          "parent": {
            "type": "ref",
            "ref": "com.atproto.repo.strongRef"
          },
          "song": {
            "type": "ref",
            "ref": "com.atproto.repo.strongRef"
          }
        }
      }
    }
  }
}