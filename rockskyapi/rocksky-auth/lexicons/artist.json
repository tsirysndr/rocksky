{
  "lexicon": 1,
  "id": "app.rocksky.artist",
  "defs": {
    "main": {
      "type": "record",
      "key": "tid",
      "description": "A declaration of an artist.",
      "record": {
        "type": "object",
        "required": [
          "name",
          "bio"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "The name of the artist.",
            "minLength": 1,
            "maxLength": 512
          },
          "bio": {
            "type": "string",
            "description": "The biography of the artist.",
            "minLength": 1,
            "maxLength": 256
          },
          "picture": {
            "type": "blob",
            "description": "The picture of the artist.",
            "accept": [
              "image/png",
              "image/jpeg"
            ],
            "maxSize": 2000000
          }
        }
      }
    }
  }
}