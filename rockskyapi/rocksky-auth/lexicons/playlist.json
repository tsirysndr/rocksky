{
  "lexicon": 1,
  "id": "app.rocksky.playlist",
  "defs": {
    "main": {
      "type": "record",
      "key": "tid",
      "description": "A declaration of a playlist.",
      "record": {
        "type": "object",
        "required": [
          "name",
          "createdAt"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "The name of the playlist.",
            "minLength": 1,
            "maxLength": 512
          },
          "description": {
            "type": "string",
            "description": "The playlist description.",
            "minLength": 1,
            "maxLength": 256
          },
          "picture": {
            "type": "blob",
            "description": "The picture of the playlist.",
            "accept": [
              "image/png",
              "image/jpeg"
            ],
            "maxSize": 2000000
          },
          "tracks": {
            "type": "array",
            "description": "The tracks in the playlist.",
            "items": {
              "type": "ref",
              "ref": "app.rocksky.song#record"
            }
          },
          "createdAt": {
            "type": "string",
            "description": "The date the playlist was created.",
            "format": "datetime"
          }
        }
      }
    }
  }
}