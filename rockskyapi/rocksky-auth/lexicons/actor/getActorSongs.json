{
  "lexicon": 1,
  "id": "app.rocksky.actor.getActorSongs",
  "defs": {
    "main": {
      "type": "query",
      "description": "Get songs for an actor",
      "parameters": {
        "type": "params",
        "required": [
          "did"
        ],
        "properties": {
          "did": {
            "type": "string",
            "description": "The DID or handle of the actor",
            "format": "at-identifier"
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "array",
          "items": {
            "type": "ref",
            "ref": "app.rocksky.song.defs#songViewBasic"
          }
        }
      }
    }
  }
}
