{
  "lexicon": 1,
  "id": "app.rocksky.song",
  "defs": {
    "main": {
      "type": "record",
      "key": "tid",
      "description": "A declaration of a song.",
      "record": {
        "type": "object",
        "required": [
          "title",
          "artist",
          "album",
          "duration"
        ],
        "properties": {
          "title": {
            "type": "string",
            "description": "The title of the song.",
            "minLength": 1,
            "maxLength": 512
          },
          "artist": {
            "type": "string",
            "description": "The artist of the song.",
            "minLength": 1,
            "maxLength": 256
          },
          "artistAlbum": {
            "type": "string",
            "description": "The artist of the album the song is from.",
            "minLength": 1,
            "maxLength": 256
          },
          "album": {
            "type": "string",
            "description": "The album the song is from.",
            "minLength": 1,
            "maxLength": 256
          },
          "duration": {
            "type": "integer",
            "description": "The duration of the song in seconds.",
            "minimum": 1
          },
          "releaseDate": {
            "type": "string",
            "description": "The release date of the song.",
            "format": "datetime"
          },
          "year": {
            "type": "integer",
            "description": "The year the song was released."
          },
          "genre": {
            "type": "string",
            "description": "The genre of the song.",
            "minLength": 1,
            "maxLength": 256
          },
          "lyrics": {
            "type": "string",
            "description": "The lyrics of the song.",
            "minLength": 1,
            "maxLength": 10000
          },
          "wiki": {
            "type": "string",
            "description": "Informations about the song",
            "maxLength": 10000
          },
          "albumArt": {
            "type": "blob",
            "description": "The album art of the song.",
            "accept": [
              "image/png",
              "image/jpeg"
            ],
            "maxSize": 2000000
          },
          "youtubeLink": {
            "type": "string",
            "description": "The YouTube link of the song.",
            "format": "uri"
          },
          "spotifyLink": {
            "type": "string",
            "description": "The Spotify link of the song.",
            "format": "uri"
          },
          "tidalLink": {
            "type": "string",
            "description": "The Tidal link of the song.",
            "format": "uri"
          },
          "appleMusicLink": {
            "type": "string",
            "description": "The Apple Music link of the song.",
            "format": "uri"
          }
        }
      }
    }
  }
}